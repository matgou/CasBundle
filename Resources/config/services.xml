<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

   <services>
       <service id="gorg.security.authentication.provider"
         class="Gorg\Bundle\AuthentificatorBundle\Security\Authentication\Provider\GorgProvider" public="false">
           <argument /> <!-- User Provider -->
           <argument>%kernel.cache_dir%/security/nonces</argument>
       </service>

       <service id="gorg.security.authentication.listener"
         class="Gorg\Bundle\AuthentificatorBundle\Security\Firewall\GorgListener" public="false">
           <argument type="service" id="security.context"/>
           <argument type="service" id="security.authentication.manager" />
       </service>
   </services>
</container>
